@*@model SistemaVentas.Entities.Usuario*@
@model UsuarioViewModel

@{ 
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<div class="col-xs-12">
    <h2>@ViewData["Title"]</h2>
</div>

<div class="container-fluid">
    <div class="row">
         <div class="col-md-offset-3 col-md-6 login">
                <section>
                    <form asp-controller="Usuario" asp-action="Index" method="post" class="form-horizontal">
                        <legend>Iniciar Sesion</legend>

                        <div asp-validation-summary="All" class="text-danger"></div>


                        <div class="form-group">
                            <label asp-for="Correo" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="Correo" class="form-control" placeholder="Correo electronico"/>
                                <span asp-validation-for="Correo" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Clave" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="Clave" class="form-control" placeholder="Contraseña"/>
                                <span asp-validation-for="Clave" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-6">
                                <button type="submit" class="form-control btn btn-default">Iniciar</button>
                            </div>
                            <div class="col-md-offset-2 col-md-10">
                                <a asp-area="" asp-controller="Usuario" asp-action="Registrar">Registrarse</a>
                            </div>
                        </div>
                    </form>
                </section>
            </div>    
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}


